{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "charset": "utf8",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "module": "commonjs",
        "noEmitOnError": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "dist",
        "pretty": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "es2017",
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
    },
    "exclude": ["server/app/public", "server/app/views"],
    "include": ["server/app.ts", "server/app/**/*.ts", "server/config/**/*.ts", "server/test/**/*.ts"]
}